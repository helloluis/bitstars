body bgcolor="#FFFFFF" style="font-family: 'Helvetica Neue', Arial, Helvetica, sans-serif;margin: 0; padding: 0; width: 100% !important;"

  table border="0" cellspacing="0" cellpadding="0" width="100%" bgcolor="#ffffff"
    tbody
      tr style="border-collapse: collapse;"
        td align='center' style="border-collapse: collapse;"

          table class='w640' border='0' cellspacing='0' cellpadding='0' width='640'
            tbody

              //! Header
              tr style="border-collapse: collapse;"
                td.w640 style="border-collapse: collapse;"
                  table align="left" bgcolor="#ffffff" border="0" cellpadding="0" cellspacing="0" width="640"
                    tbody
                      tr style="border-collapse: collapse;"
                        td.logo align="left" style="border-collapse: collapse;"
                          a href="http://#{App.url}"
                            = image_tag "logo_and_logotype.png", style: "display:inline-block", border: "0", alt: App.name, width: 142, height:50

                        td.tagline align="right" width="250" style="padding: 30px 0px 10px 70px;"
                          a href="http://#{App.url}" style="color:#7fc8e5"
                            = App.tagline          
                  hr style="border-bottom:20px solid #7fc8e5;border-top:0;width:100%;clear:both;border-left: 0;border-right: 0;"
              /! -// header

              //! Body Text           
              tr style="border-collapse: collapse;"
                td.w640 align="center" style="border-collapse: collapse;"
                  table.body-content bgcolor="#ffffff" border="0" cellpadding="0" cellspacing="0" style="width: 100%; margin: 30px 0 0 0;"
                    tbody
                      tr style="border-collapse: collapse;"
                        td.body-content align="left" style="border-collapse: collapse; padding:20px"

                          = yield
              
              /! //Body Text

              //! navi / social-networks
              tr style="border-collapse: collapse;"
                td.w640 style="border-collapse: collapse;"
                  table.social-networks border="0" cellpadding="0" cellspacing="0" width="100%" style="background: #403f41;padding: 0 0 20px 0;"
                    tbody
                      tr style="border-collapse: collapse;"
                        td align="center" style="border-collapse: collapse;"
                          h4 style="line-height: 100% !important; -webkit-font-smoothing: antialiased; background: #7fc8e5; padding: 20px 0;margin: 0 0 20px 0;color: #fff; text-transform: uppercase; text-shadow: 0 1px 1px rgba(0,0,0,0.2); font-size:20px;"
                            | Follow #{App.name} On:
                          == facebook_link('button', image_tag("mailer/facebook_48.png", style: "outline: none; margin-right:10px;vertical-align:middle", border:0, alt: "Like Us on Facebook", width: 48, height: 48))
                          == twitter_link('button', image_tag("mailer/twitter_48.png", style: "outline: none; margin-right:10px;vertical-align:middle", border:0, alt: "Follow Us on Twitter", width: 48, height: 48))
                          == googleplus_link('button', image_tag("mailer/googleplus_48.png", style: "outline: none; margin-right:10px;vertical-align:middle", border:0, alt: "Follow Us on Google+", width: 48, height: 48))
                          == pinterest_link('button', image_tag("mailer/pinterest_48.png", style: "outline: none; margin-right:10px;vertical-align:middle", border:0, alt: "Follow Us on Pinterest", width: 48, height: 48))
              /! //navi / social-networks


              //! footer area
              tr style="border-collapse: collapse;"
                td.footer-text2 style="border-collapse: collapse; font-size:10px; color:#4f4f4f; text-align:center;"
                  br
                    = App.name
                    | -
                    = App.address
                    | &nbsp;&middot;&nbsp;
                    a href="http://www.#{App.url}/privacy-policy" style="color:#4f4f4f;"
                      | Privacy Policy
                    | &nbsp;|&nbsp;
                    a href="http://www.#{App.url}" style="color:#4f4f4f;"
                      | www.#{App.url}
              /! //footer area
