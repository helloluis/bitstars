      table[class=social-networks] {
        margin: 0 auto;
        padding: 0;
      }
      table[class=social-networks] h4 {
        margin-bottom:0 !important;
      }
      .body-content {
        width:100%!important;
        margin:0 auto!important;
      }
      table[class=body-content] table {
        text-align: left;
        width:100%;
