      td[class="logo"] { text-align:center !important; width: 320px !important; display:block; margin:0 auto;} 
      td[class="tagline"] { text-align:center !important; width: 320px !important; display:block; margin:0 auto;} 
      td[class="content-image"] { text-align:center !important; width:320px !important; } 
      td[class="banner-ad"] { text-align:center !important; width:320px !important; } 
