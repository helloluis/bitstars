  css:
    @media only screen and (max-width: 480px) { 
      td[class="body-content"] {text-align: left !important;width:320px !important;}
      table[class=w640], td[class=w640], img[class=w640] { width:320px !important; }
      td[class=w640] table {
        width:320px !important;
        min-width: 320px !important;
      } 
      td[class="logo"] { margin:0!important;} 
      td[class="tagline"] { margin:0!important;}

      /* Transactional e-mail specific */
        table { width:auto}
        td[class=w640] table { margin:20px 0; }
        td[class="body-content"] {
          padding:0 5%!important;
        }

      /* end of Transactional e-mail specific styles */
