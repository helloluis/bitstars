div id='invoice' class='modal fade' role='dialog'
  div class="modal-dialog modal-lg"
    div class="modal-content"
    div class='modal-header'
      button type="button" class="close" data-dismiss="modal" aria-hidden="true" 
        | &times;
      h1 
        = t(:tip)
        | &nbsp;
        = @photo.user.full_name
      p = t(:tip_instructions)
      
    div class='modal-body'
      img id='qr_code' data-src='https://chart.googleapis.com/chart?chld=Q&chs=280x280&cht=qr&chl=' width='280' height='280'
      br
      label = t(:tip_address)
      br
      textarea id='invoice_address' value='0'


    div class="modal-footer"
      button type='button' class='close' data-dismiss='modal' = t(:close_this_dialog)
